@using Library_Management_System.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<TBLEMPLOYEE>
@{
    ViewBag.Title = "EmployeeIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:#915555;font-weight:bold;text-align:center;margin-top:20px;">Personeller Sayfası</h2>
<br />




<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>İSİM</th>
        <th>SOYİSİM</th>
        <th>GÜNCELLE/SİL</th>
    </tr>

    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.Name</td>
                <td>@x.Surname</td>


                <td>

                    <a href="/Employee/EmployeeFind/@x.ID " class="btn btn-success">GÜNCELLE</a>
                    <i>---</i>
                    <a href="/Employee/EmployeeDelete/@x.ID" class="btn btn-danger">SİL</a>



                </td>


            </tr>
        }



    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("EmployeeIndex", new { sayfa }))
<a href="/Employee/EmployeeAdd"><button class="btn btn-primary"> YENİ PERSONEL EKLE</button></a>

