@model Library_Management_System.Models.Classes.LibraryEnumerable
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title >SEMİH KÜTÜPHANESİ</title>

    <!-- Custom fonts for this theme -->
    <link href="/webvitrin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- Theme CSS -->

    <link href="/webvitrin/css/freelancer.min.css" rel="stylesheet" />

    <!-- ikon  -->
    <link rel="icon" type="image/x-icon" href="~/webvitrin/img/book.png" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>

<body id="page-top">

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="#page-top">SEMİH KÜTÜPHANESİ</a>



            <button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#portfolio">KİTAPLAR</a>
                    </li>
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#about">HAKKIMIZDA</a>
                    </li>
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#contact">İLETİŞİM</a>
                    </li>
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="/Login/Login">Giriş Yap</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Masthead -->
    <header class="masthead bg-primary text-white text-center">
        <div class="container d-flex align-items-center flex-column">

            <!-- Masthead Avatar Image -->
            @*<img style="margin-top:-30px;" class="masthead-avatar mb-4" src="~/webvitrin/img/Magic Book Logo.png" alt="">*@
            <img style="margin-top:-30px; border-radius: 50%;" class="masthead-avatar mb-4" src="~/webvitrin/img/Green Brown Modern National Library Workers Day Instagram Post.png" alt="">

            <!-- Masthead Heading -->
            <h1>Kütüphanemize Hoş Geldiniz...</h1>

            <!-- Icon Divider -->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-book"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Masthead Subheading -->
            <p class="masthead-subheading font-weight-bold mb-0">"Her kitap, yeni bir yolculuğun başlangıcıdır."</p>

        </div>
    </header>

    <!-- Portfolio Section -->
    <section class="page-section portfolio" id="portfolio">
        <div class="container">

            <!-- Portfolio Section Heading -->
            <h2 class="page-section-heading text-center text-secondary mb-0">KİTAPLAR</h2>

            <!-- Icon Divider -->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-book"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Portfolio Grid Items -->
            <div class="row">
                @foreach (var x in Model.Books)
                {



                <!-- Portfolio Item 1 -->
                <div class="col-md-6 col-lg-4">
                    <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal1">
                        <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-76 w-76">
                            <div class="portfolio-item-caption-content text-center text-white">
                                <i class="fas fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <img class="img-fluid" src="@x.BookImages" alt="">
                    </div>
                </div>

                }
        </div>
    </section>

    <!-- About Section -->
    <section class="page-section bg-primary text-white mb-0" id="about">
        <div class="container">

            <!-- About Section Heading -->
            <h2 class="page-section-heading text-center text-white">HAKKIMIZDA</h2>
            

            <!-- Icon Divider -->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-address-book"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- About Section Content -->
            <div class="row">
                @foreach (var x in Model.Abouts)
                {


                <div>
                    <p class="lead">
                    @x.Details
                    
                    </p>
                </div>
                
                }
            </div>

           

        </div>
    </section>

    <!-- Contact Section -->
    <section class="page-section" id="contact">
        <div class="container">

            <!-- Contact Section Heading -->
            <h2 class="page-section-heading text-center text-secondary mb-0">İLETİŞİM</h2>


            <!-- Icon Divider -->
            <div class="divider-custom">
              
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-phone"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Contact Section Form -->
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
                    @using (Html.BeginForm("StoreIndex", "Store", FormMethod.Post))
                    {




                <form name="sentMessage" id="contactForm" novalidate="novalidate">
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>Ad Soyad</label>
                            <input class="form-control" id="name" name="NameSurname" type="text" placeholder="Adınız Soyadınız" required="required" data-validation-required-message="Lütfen Adınız Soyadınızı Giriniz.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>Mail Adresi</label>
                            <input class="form-control" id="email" type="email" name="Email" placeholder="Mail Adresiniz" required="required" data-validation-required-message="Lütfen Mail Adresinizi Giriniz.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>Telefon Numarası</label>
                            <input class="form-control" id="phone" type="tel" name="PhoneNumber" placeholder="Telefon Numaranız" required="required" data-validation-required-message="Lütfen Telefon Numaranızı Giriniz.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>Mesajınız</label>
                            <textarea class="form-control" id="message" name="Message" rows="5" placeholder="Mesajınız" required="required" data-validation-required-message="Lütfen İletmek İstediğiniz Mesajınızı Giriniz."></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-xl" name="" id="sendMessageButton">GÖNDER</button>
                    </div>
                </form>
                    }
                </div>
            </div>

        </div>
    </section>

    <!-- Footer -->
    <footer class="footer text-center">
        <div class="container">
            <div class="row">

                <!-- Footer Location -->
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <h4 class="text-uppercase mb-4">Konum</h4>
                    <p class="lead mb-0">
                        34150 İstanbul/Güngören
                        <br>Türkiye
                    </p>
                </div>

                <!-- Footer Social Icons -->
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <h4 class="text-uppercase mb-4">Sosyal Medya Hesaplarımız</h4>
                    <a class="btn btn-outline-light btn-social mx-1" href="#">
                        <i class="fab fa-fw fa-facebook-f"></i>
                    </a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#">
                        <i class="fab fa-fw fa-twitter"></i>
                    </a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#">
                        <i class="fab fa-fw fa-linkedin-in"></i>
                    </a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#">
                        <i class="fab fa-fw fa-youtube"></i>
                    </a>
                </div>

                <!-- Footer About Text -->
                <div class="col-lg-4">
                    <h4 class=" text-uppercase mb-4">Kütüphane Modülü</h4>
                    <p class="lead mb-0">
                       Semih Vural - Yazılım & Danışmanlık tarafından hazırlanmıştır.
                        <br />
                        
                    </p>
                </div>

            </div>
        </div>
    </footer>

    <!-- Copyright Section -->
    <section class="copyright py-4 text-center text-white">
        <div class="container">
            <small>Copyright &copy; Your Website 2024</small>
        </div>
    </section>

    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-to-top d-lg-none position-fixed ">
        <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>

    <!-- Portfolio Modals -->
    <!-- Portfolio Modal 1 -->
    <div class="portfolio-modal modal fade" id="portfolioModal1" tabindex="-1" role="dialog" aria-labelledby="portfolioModal1Label" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        <i class="fas fa-times"></i>
                    </span>
                </button>
                <div class="modal-body text-center">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-8">



                                <!-- Portfolio Modal - Title -->
                                @foreach (var book in Model.Books)
                                {
                                    <!-- Kitap butonu -->
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-@book.ID">
                                        @book.Name
                                    </button>

                                    <!-- Modal -->
                                    <div class="portfolio-modal modal fade" id="modal-@book.ID" tabindex="-1" role="dialog" aria-labelledby="modal-@book.ID-Label" aria-hidden="true">
                                        <div class="modal-dialog modal-xl" role="document">
                                            <div class="modal-content">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">
                                                        <i class="fas fa-times"></i>
                                                    </span>
                                                </button>
                                                <div class="modal-body text-center">
                                                    <div class="container">
                                                        <div class="row justify-content-center">
                                                            <div class="col-lg-8">
                                                                <!-- Modal Başlık -->
                                                                <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0">@book.Name</h2>
                                                                <!-- Icon Divider -->
                                                                <div class="divider-custom">
                                                                    <div class="divider-custom-line"></div>
                                                                    <div class="divider-custom-icon">
                                                                        <i class="fas fa-star"></i>
                                                                    </div>
                                                                    <div class="divider-custom-line"></div>
                                                                </div>
                                                                <!-- Modal Resmi --> 
                                                                <!-- Modal Metni -->
                                                                <p class="mb-5">@book.BookDetails</p>
                                                                <button class="btn btn-primary" data-dismiss="modal">
                                                                    <i class="fas fa-times fa-fw"></i>
                                                                    Close Window
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }





                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   



    <!-- Bootstrap core JavaScript -->
    <script src="/webvitrin/vendor/jquery/jquery.min.js"></script>
    <script src="/webvitrin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="/webvitrin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Contact Form JavaScript -->
    <script src="/webvitrin/js/jqBootstrapValidation.js"></script>
    <script src="/webvitrin/js/contact_me.js"></script>

    <!-- Custom scripts for this template -->
    <script src="/webvitrin/js/freelancer.min.js"></script>

</body>

</html>
