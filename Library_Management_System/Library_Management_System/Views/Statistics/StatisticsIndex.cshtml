
@{
    ViewBag.Title = "StatisticsIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 style="color:#915555;font-weight:bold;text-align:center;margin-top:20px;">İstatistik Sayfası</h2>


<!-- Custom Theme files -->
<link href="~/istatistik/css/style.css" rel="stylesheet" type="text/css" media="all" />

<link href="~/istatistik/css/jqvmap.css" rel="stylesheet" />



<!-- chart -->
<script src="~/istatistik/js/Chart1.js"></script>
<!-- //chart -->

<script src="~/istatistik/js/main.js"></script> <!-- Resource jQuery -->
<script src="~/istatistik/js/jquery.min.js"></script> <!-- Resource jQuery -->
<script src="~/istatistik/js/jquery.vmap.js"></script>
<script src="~/istatistik/js/jquery.vmap.sampledata.js"></script>
<script src="~/istatistik/js/jquery.vmap.world.js"></script>


<script>
    $(document).ready(function (c) {
        $('.alert-close6').on('click', function (c) {
            $('.world-map').fadeOut('slow', function (c) {
                $('.world-map').remove();
            });
        });
    });
</script>
<script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery('#vmap').vectorMap({
            map: 'world_en',
            backgroundColor: '#333333',
            color: '#ffffff',
            hoverOpacity: 0.7,
            selectedColor: '#666666',
            enableZoom: true,
            showTooltip: true,
            values: sample_data,
            scaleColors: ['#C8EEFF', '#006491'],
            normalizeFunction: 'polynomial'
        });
    });
</script>

<div class="list_of_members" style="width:%100;">
    <div class="sales">
        <div class="icon">
            <i class="dollar"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.dgr4</h3>
            <p>Toplam Ciro</p>
        </div>

    </div>
    <div class="new-users">
        <div class="icon">
            <i class="user1"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.dgr</h3>
            <p>Toplam Üye</p>
        </div>

    </div>
    <div class="orders">
        <div class="icon">
            <i class="order"></i>
        </div>
        <div class="icon-text">
            <h3>@ViewBag.dgr2</h3>
            <p>Toplam Kitap</p>
        </div>

    </div>
    <div class="visitors" style="height:140px;">
        <div class="icon">
            <i class="visit"></i>
        </div>
        <div class="icon-text" style="margin-right:-15px;">
            <h3>@ViewBag.dgr3</h3>
            <p>Emanet Kitap</p>

        </div>
        <div class="clearfix"></div>

    </div>

    <div class="clearfix"></div>
    <div class="total-sales">
        <div class="user-trends">


            <canvas id="bar" height="340" width="780"></canvas>
            <script>

                var barChartData = {
                    labels: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz"],
                    datasets: [
                        {
                            fillColor: "rgba(255, 137, 167, 0.78)",
                            strokeColor: "rgba(220,220,220,1)",
                            data: [65, 59, 90, 81, 56, 55, 40]
                        },
                        {
                            fillColor: "rgba(140, 145, 255, 0.69)",
                            strokeColor: "rgba(151,187,205,1)",
                            data: [28, 48, 40, 19, 96, 27, 100]
                        }
                    ]

                }

                var myLine = new Chart(document.getElementById("bar").getContext("2d")).Bar(barChartData);

            </script>
            <div class="clearfix"></div>
        </div>
        <div class="to-do">

            <h3>Yapılacaklar Listesi</h3>
            <div class="checkbox-form">
                <div class="check">
                    <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Yayınevini ara</label>
                </div>
                <div class="check">
                    <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Emanet ktaplar için kontrol</label>
                </div>
                <div class="check">
                    <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Kasayı kontrol et</label>
                </div>
                <div class="check">
                    <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Haftasonu çalışması</label>
                </div>
                <div class="check">
                    <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Yeni kitapların girişi</label>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>
    </div>




    <div class="total-world">
        <div class="world-map">
            <div class="alert-close6"> </div>
            <h3>Dünya Haritası</h3>
            <p><span class="color1"></span>40%<span class="color2"></span>12%<span class="color3"></span>11%<span class="color4"></span>10%<span class="color5"></span>18%</p>
            <div class="clearfix"></div>
            <div id="vmap" style="width: 600px; height: 400px;"></div>
        </div>
        <div class="site-report">
            <div class="alert-close3"> </div>
            <h3>Sistem Raporları</h3>
            <div class="skills-top">
                <h5>Memnuniyet</h5>
                <h4>86%</h4>
                <div class="clearfix"></div>
                <div class="skills">
                    <div class="skill" style="width: 86%"></div>
                </div>
            </div>
            <div class="skills-top">
                <h5>Güvenilirlik</h5>
                <h4>68%</h4>
                <div class="clearfix"></div>
                <div class="skills">
                    <div class="skill1" style="width:68%"></div>
                </div>
            </div>
            <div class="skills-top">
                <h5>Haftalık Geri Dönüş</h5>
                <h4>76% </h4>
                <div class="clearfix"></div>
                <div class="skills">
                    <div class="skill2" style="width: 76%"></div>
                </div>
            </div>
            <p>Kütüphane yönetim sistemi admin panelindesiniz.Sizlere iyi okumalar dileriz.</p>
        <div class="clearfix"></div>
    </div>
