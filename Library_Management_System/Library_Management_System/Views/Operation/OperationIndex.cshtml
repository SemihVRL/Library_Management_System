@using Library_Management_System.Models.Entity
@model List<TBLACTION>
@{
    ViewBag.Title = "OperationIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:#915555;font-weight:bold;text-align:center;margin-top:20px;">İADESİ ALINAN KİTAPLARIN SAYFASI</h2>


<table class="table table-bordered" style="text-align:center;">

    <tr>
        <th>İŞLEM ID</th>
        <th>KİTAP ADI</th>
        <th>ÜYE</th>
        <th>PERSONEL</th>
        <th>ALIŞ TARİHİ</th>
        <th>VERMESİ GEREKEN TARİH</th>
        <th>GETİRDİĞİ TARİHİ</th>
        <th>DETAYLAR</th>




    </tr>

    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.TBLBOOK.Name</td>
                <td>@x.TBLMEMBERS.Name&nbsp;@x.TBLMEMBERS.Surname</td>
                <td>@x.TBLEMPLOYEE.Name&nbsp;@x.TBLEMPLOYEE.Surname</td>
                <td>@Convert.ToDateTime(x.ShipDate).ToString("dd/MM/yyyy")</td>
                <td>@Convert.ToDateTime(x.ReturnDate).ToString("dd/MM/yyyy")</td>
                <td>@Convert.ToDateTime(x.GetirdigiTarih).ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="/BookAction/TakeBookIndex" class="btn btn-default" style="background-color:pink;">
                        Detaylar
                    </a>
               
                
                </td>


            </tr>
        }




    </tbody>
</table>






