@model Library_Management_System.Models.Entity.TBLCATEGORY
@{
    ViewBag.Title = "CategoryAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:#915555;font-weight:bold;text-align:center;margin-top:20px;"> Yeni Kategori Ekleme Sayfası</h2>


@using (Html.BeginForm("CategoryAdd", "Category", FormMethod.Post))
{
    <div>
        @Html.LabelFor(x => x.ID)
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })

    </div>
  


    <div>
       <label>KATEGORİ</label>
        @Html.TextBoxFor(x => x.CategoryAd, new { @class = "form-control",})

    </div>
   
    <br />
   <button class="btn btn-primary"> EKLE</button>
}